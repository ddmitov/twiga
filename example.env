# Twiga Configuration

# Year of the Common Crawl News dataset to use for the demo.
DEMO_DATASET_YEAR=2024

# First table number to process from the dataset (controls how much data to load).
DEMO_DATASET_FIRST_TABLE_NUMBER=0

# Last table number to process from the dataset (controls how much data to load).
DEMO_DATASET_LAST_TABLE_NUMBER=750

# Number of texts to process per dataset table/batch.
DEMO_DATASET_TEXTS_PER_TABLE=25000

# Number of bins for partitioning the text tables.
# Higher values improve parallelism but increase the number of tables.
TEXT_BINS=500

# Number of bins for partitioning the index tables.
# Higher values improve parallelism but increase the number of tables.
INDEX_BINS=10000

# Number of parts to split each bin into during indexing.
# Higher values reduce memory usage but increase processing overhead.
INDEXER_PARTS_PER_BIN=2

# Maximum number of words per batch during hashing.
# Higher values improve throughput but increase memory usage.
INDEXER_BATCH_MAXIMUM=500000

# Enable MCP (Model Context Protocol) server for LLM tool integration.
# When enabled, the search function is exposed as an MCP tool at /gradio_api/mcp/sse
MCP_SERVER_ENABLED=true

# Interval in seconds between inactivity checks for scale-to-zero capability.
INACTIVITY_CHECK_SECONDS=60

# Maximum inactivity time in seconds before the application shuts down.
INACTIVITY_MAXIMUM_SECONDS=900
